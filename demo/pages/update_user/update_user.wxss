/* pages/update_user/update_user.wxss */
page{ 
  height: 120%; 
 } 
  
 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
  background-color: #f2f2f2 
 } 

 /*表单内容*/ 
 .login-from { 
  margin-top: 20px; 
  flex: auto; 
  height:100%; 
 } 
  
 .inputView { 
  background-color: #fff; 
  line-height: 44px; 
 } 
 /*输入框*/ 
 .nameImage, .keyImage { 
  margin-left: 22px; 
  width: 14px; 
  height: 14px 
 } 
  
 .inputText { 
  flex: block; 
  float: right; 
  text-align: right; 
  margin-right: 22px; 
  margin-top: 11px; 
  color: black; 
  font-size: 14px 
 } 
  
 .line { 
  width: 100%; 
  height: 0.5px; 
  background-color: #cccccc; 
  margin-top: 1px; 
 } 
 /*按钮*/ 
 .loginBtnView { 
  width: 100%; 
  height: auto; 
  background-color: #f2f2f2; 
  margin-top: 0px; 
  margin-bottom: 0px; 
  padding-bottom: 0px; 
 } 
  
 .loginBtn { 
  width: 80%; 
  margin-top: 5px; 
 } 

 .idview{
  display: flex;
  padding-top: 10px;
  padding-bottom: 20px;
  justify-content: center;  
 }

 .radiopad{
   padding-left: 5px;
   padding-right: 5px;
 }

 .textarea{
  background-color: white;
  flex: auto; 
  margin-bottom: 10px;
  padding: 10px;
 }

 .hr {
  height: 10px;
  opacity: 0.2;
}

.left_input{
  flex: block; 
  float: left; 
  text-align: left; 
  margin-left: 10px; 
  margin-top: 11px; 
  color: black; 
  font-size: 14px;
  width: 80%;
}

.ava{
  margin-top: 10px;
  margin-bottom: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.avatar{
  width: 49px;
  height: 49px;
  border-radius: 50%;
}

.avatar_icon{
  width: 48px;
  height: 48px;
  border-radius: 50%;
}