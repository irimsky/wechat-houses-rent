  background-color: #fff;
  height: 50px;
  align-items: center;
  line-height: 50px;
  justify-content: center;
}

.icon {
  width: 50px;
  text-align: center;
  margin-right: 15px;
}

.itemName {
  width: 45%;
  font-size: 14px;
  font-weight: 530;
}

.line {
  height: 10px;
}

.hr {
  height: 1px;
  background-color: #ccc;
  opacity: 0.2;
}

.remark {
  font-weight: normal;
  margin-top: 5px;
}

.right {
  width: 45%;
  text-align: right;
  color: grey;
  font-size: 14px;
}

.opr {
  color: #5495e6;
  font-size: 13px;
  font-weight: bold;
  margin-right: 10px;
}

.redDot {
