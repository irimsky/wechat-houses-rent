/* miniprogram/pages/publish/publish.wxss */

Page {
  height: auto;
}

.content {
  height: 100%;
  width: 100%;
}

textarea {
  width: 100%;
  padding: 25rpx 0;
  height: 600rpx;
}

.grey {
  width: 100%;
  height: 600rpx;
  background-color: #f3efef;
}

.text-content {
  background-color: #f3efef;
  padding: 0 25rpx;
}



.btn-func {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: fixed;
  bottom: 0;
  margin: 0 auto;
  align-items: center;
}

.btn-img {
  width: 220px;
  height: 45px;
  line-height: 45px;
  margin-top: 20px;
  margin-bottom: 20px;
  background-color: rgb(113, 98, 250);
  color: #fff;
  border-radius: 50px;
}

.btn {
  width: 220px;
  height: 45px;
  line-height: 45px;
  background-color: #d50310;
  color: #fff;
  border-radius: 50px;
  margin-bottom: 20px;
}